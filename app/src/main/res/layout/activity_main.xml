<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="10"
    android:padding="0dp"
    android:background="@drawable/bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="8dp"
        android:background="#aa000000"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="숫자로 하는 야구 게임"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="8dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFBB00"
            android:layout_marginRight="8dp"
            android:text="게임설명"
            android:padding="8dp"
            android:background="#aa603030"
            android:layout_alignBaseline="@+id/tv_title"
            android:layout_alignParentRight="true"
            android:onClick="clickhint"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/tv_ball00"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:textStyle="bold"
            android:textSize="36sp"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:background="@drawable/ballimg"/>
        <TextView
            android:id="@+id/tv_ball01"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:textStyle="bold"
            android:textSize="36sp"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:background="@drawable/ballimg"/>
        <TextView
            android:id="@+id/tv_ball02"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:textStyle="bold"
            android:textSize="36sp"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:background="@drawable/ballimg"/>

    </LinearLayout>
    <ScrollView
        android:id="@+id/scrollresult"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="7"
        android:background="#66000000"
        android:layout_margin="8dp"
        android:scrollbars="vertical"


        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:padding="8dp"
                android:text="게임을 시작합니다.\n\n"
                android:textColor="#fff"
                />
        </LinearLayout>


    </ScrollView>

    <GridLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:columnCount="4"

        android:layout_gravity="center">

         <ImageView
             android:id="@+id/num00"
             android:layout_width="55dp"
             android:layout_height="55dp"
             android:layout_margin="1dp"
             android:layout_marginLeft="8dp"
             android:src="@drawable/btn00"
             android:onClick="clicknum"/>
        <ImageView
            android:id="@+id/num01"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="1dp"
            android:src="@drawable/btn01"
            android:onClick="clicknum"/>
        <ImageView
            android:id="@+id/num02"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="1dp"
            android:layout_marginRight="0dp"
            android:src="@drawable/btn02"
            android:onClick="clicknum"/>
        <ImageView
            android:id="@+id/hitbtn"
            android:layout_width="58dp"
            android:layout_height="116dp"
            android:layout_marginTop="1dp"
            android:layout_rowSpan="4"
            android:layout_gravity="fill"

            android:src="@drawable/hitbtn00"
            android:onClick="clickhit"/>

        <ImageView
            android:id="@+id/num03"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="1dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/btn03"
            android:onClick="clicknum"/>

        <ImageView
            android:id="@+id/num04"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="1dp"
            android:src="@drawable/btn04"
            android:onClick="clicknum"/>

        <ImageView
            android:id="@+id/num05"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="1dp"
            android:layout_marginRight="0dp"
            android:src="@drawable/btn05"
            android:onClick="clicknum"/>
        <ImageView
            android:id="@+id/num06"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="1dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/btn06"
            android:onClick="clicknum"/>
       <ImageView
            android:id="@+id/num07"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="1dp"
            android:src="@drawable/btn07"
            android:onClick="clicknum"/>
        <ImageView
            android:id="@+id/num08"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="1dp"
            android:layout_marginRight="0dp"
            android:src="@drawable/btn08"
            android:onClick="clicknum"/>
        <ImageView
            android:id="@+id/restart"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="1dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/restartball"
            android:onClick="clicrestart"/>
        <ImageView
            android:id="@+id/num09"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="1dp"
            android:src="@drawable/btn09"
            android:onClick="clicknum"/>

        <ImageView
            android:id="@+id/del"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_margin="1dp"
            android:layout_marginRight="0dp"
            android:src="@drawable/del"
            android:onClick="clickdel"/>
    </GridLayout>

</LinearLayout>